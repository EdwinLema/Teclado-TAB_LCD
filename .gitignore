// Teclado TAB en LCD
#include <Keypad.h>
#include <LiquidCrystal.h>
#include <TimerOne.h>
LiquidCrystal lcd(13,12,11,10,9,8);
const byte ROWS =4;
const byte COLS =3;
char hexaKeys[ROWS][COLS]={
  {'1', '2', '3'},
  {'4', '5', '6'},
  {'7', '8', '9'},
  {'*', '0', '#'}
};
byte rowPins[ROWS]= {3,2,1,0};// conectar los pines de las filas
byte colPins[COLS]={6,5,4};   // conectar los pines de las columnas.
char letra;
int cont=0;
int cont1=0;
int cont2=3;
int cont3=6;
int cont4=9;
int cont5=12;
int cont6=15;
int cont7=19;
int cont8=22;
int col=0;
//initialize an instance of class NewKeypad
Keypad teclado = Keypad( makeKeymap(hexaKeys),rowPins, colPins, ROWS, COLS);

void setup() {
  // put your setup code here, to run once:
  lcd.begin(16,2);
  Timer1.initialize(100000);
  Timer1.attachInterrupt(espera);

}

void loop() {
  // put your main code here, to run repeatedly:
  char datoteclado = teclado.getKey();
  if(datoteclado){
    if (datoteclado == '1'){
      lcd.setCursor(col,0);
      lcd.print('1');
      cont=0;
      }
    if (datoteclado == '2'){
      cont1++;
      abc(cont1);
      lcd.setCursor(col,0);
      lcd.print(letra);
      if(cont1==3){
        cont1=0;
        }
      cont=0;
      }
    if (datoteclado == '3'){
      cont2++;
      abc(cont2);
      lcd.setCursor(col,0);
      lcd.print(letra);
      if(cont2==6){
      cont2=3;
         }
         cont=0;
      }
    if (datoteclado == '4'){
      cont3++;
      abc(cont3);
      lcd.setCursor(col,0);
      lcd.print(letra);
      if(cont3==9){
      cont3=6;
        }
        cont=0;
      }
    if (datoteclado == '5'){
      cont4++;
      abc(cont4);
      lcd.setCursor(col,0);
      lcd.print(letra);
      if(cont4==12){
      cont4=9;
        }
        cont=0;
      } 
    if (datoteclado == '6'){
      cont5++;
      abc(cont5);
      lcd.setCursor(col,0);
      lcd.print(letra);
      if(cont5==15){
      cont5=12;
        }
        cont=0;
      }  
    if (datoteclado == '7'){
      cont6++;
      abc(cont6);
      lcd.setCursor(col,0);
      lcd.print(letra);
      if (cont6==19){
        cont6=15;
        }
      cont=0;
      }  
    if (datoteclado == '8'){
      cont7++;
      abc(cont7);
      lcd.setCursor(col,0);
      lcd.print(letra);
      if(cont7==22){
        cont7=19;
        }
      cont=0;
      }
      if(datoteclado == '9'){
        cont8++;
        abc(cont8);
        lcd.setCursor(col,0);
        lcd.print(letra);
        if(cont8==26){
          cont8=22;
          }
          cont=0;
        }
       if(datoteclado=='0'){
        lcd.setCursor(col,0);
        lcd.print(' ');
        cont=0;
        }                                    
    }

}
