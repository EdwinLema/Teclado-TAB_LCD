void espera(){
    cont++;
    if(cont==6){
      col++;
    cont1 = 0;
    cont2 = 3;
    cont3 = 6;
    cont4 = 9;
    cont5 = 12;
    cont6 = 15;
    cont7 = 19;
    cont8 = 22;
      }  
